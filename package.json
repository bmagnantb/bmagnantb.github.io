{
  "name": "Portfolio",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "preinstall": "rm -rf node_modules",
		"postinstall": "[ ! -d scss ] && mkdir scss && touch ./scss/style.scss; [ ! -d dist ] && mkdir dist && touch ./dist/style.css && touch ./dist/app.js; [ ! -d js ] && mkdir js && touch ./js/app.js; [ ! -d js/test ] && mkdir js/test && touch ./js/test/test.js; [ ! -d server.js ] && touch server.js; [ ! -d index.html ] && touch index.html; npm run css:install; echo 'dir/files created'; npm run ignores",
		"ignores": "echo 'node_modules' > .gitignore; echo '.DS_Store' >> .gitignore; echo 'bower_components' >> .gitignore; echo 'npm_debug' >> .gitignore",
		"start": "node server.js & npm run watch",
		"watch": "parallelshell 'npm run watch:css' 'npm run watchify:js'",
		"watch:css": "watch 'npm run build:css' ./scss/",
		"watchify:js": "watchify ./js/app.js --extension=.jsx -t babelify -o ./dist/app.js -v",
		"build:css": "node ./node_modules/.bin/node-sass ./scss/style.scss ./dist/style.css; csso ./dist/style.css ./dist/style.min.css; echo '------sassy------'",
		"test": "mocha --compilers js:babel/register ./js/test/test.js; echo '------tested------'",
		"env": "env"
  },
  "dependencies": {
  	"express": "latest",

  	"parallelshell": "latest",
  	"watch": "latest",
  	"watchify": "latest",
  	"uglifyify": "latest",
  	"babelify": "latest",

  	"mocha": "latest",
  	"chai": "latest",

  	"jquery": "latest",
  	"modernizr": "latest",

  	"node-sass": "latest",
  	"csso": "latest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bmagnantb/portfolio.git"
  },
  "browserify": {
  		"extensions": [ ".js", ".jsx" ]
  },
  "author": "Ben Magnant Brown",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bmagnantb/portfolio/issues"
  },
  "homepage": "https://github.com/bmagnantb/portfolio"
}
